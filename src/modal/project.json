{
  "name": "modal",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "projectType": "library",
  "sourceRoot": "src/modal",
  "prefix": "ngx-bootstrap-base",
  "targets": {
    "build": {
      "executor": "@nx/angular:package",
      "outputs": [
        "{workspaceRoot}/dist/ngx-bootstrap/modal"
      ],
      "options": {
        "tsConfig": "src/modal/tsconfig.lib.json",
        "project": "src/modal/ng-package.json",
        "updateBuildableProjectDepsInPackageJson": true
      },
      "configurations": {
        "production": {
          "tsConfig": "src/modal/tsconfig.lib.prod.json"
        }
      },
      "dependsOn": [
        {
          "target": "build",
          "dependencies": true
        }
      ]
    },
    "lint": {
      "executor": "@nx/linter:eslint",
      "options": {
        "lintFilePatterns": [
          "src/modal/**/*.ts",
          "src/modal/**/*.html",
          "src/modal/package.json",
          "src/modal/project.json"
        ]
      }
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": [
        "{workspaceRoot}/coverage/src/modal"
      ],
      "options": {
        "jestConfig": "src/modal/jest.config.ts",
        "passWithNoTests": true
      }
    }
  }
}
